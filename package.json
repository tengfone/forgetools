{
  "name": "forgetools",
  "version": "1.0.9",
  "description": "Offline Developer Utilities",
  "main": "src/main.js",
  "scripts": {
    "start": "npm run postinstall && electron .",
    "watch": "npm run postinstall && nodemon --exec electron .",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:ci": "playwright test --reporter=list,html",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "node scripts/setup-monaco.js",
    "rebuild": "electron-rebuild"
  },
  "keywords": [
    "developer-tools",
    "electron-app",
    "utilities",
    "offline-tools",
    "code-formatter",
    "qr-code",
    "jwt",
    "crypto",
    "base64",
    "markdown",
    "yaml",
    "json",
    "sass",
    "less",
    "code-editor",
    "monaco-editor"
  ],
  "author": "tengfone",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "electron": "^27.1.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "fs-extra": "^11.2.0",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "dependencies": {
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "color-convert": "^2.0.1",
    "cron-parser": "^4.9.0",
    "diff": "^5.1.0",
    "highlight.js": "^11.9.0",
    "htmltojsx": "^0.2.5",
    "js-beautify": "^1.14.11",
    "jsrsasign": "^11.1.0",
    "jwt-decode": "^4.0.0",
    "less": "^4.2.0",
    "marked": "^11.1.0",
    "monaco-editor": "^0.45.0",
    "node-forge": "^1.3.1",
    "papaparse": "^5.4.1",
    "php-serialize": "^4.1.1",
    "qr-image": "^3.2.0",
    "qrcode": "^1.5.3",
    "sass": "^1.69.7",
    "svgo": "^3.2.0",
    "ulid": "^2.3.0",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4",
    "ajv": "^8.12.0"
  },
  "build": {
    "appId": "com.forgetools.app",
    "productName": "ForgeTools",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "mac": {
      "icon": "build/icon512.png",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "portable",
      "icon": "build/icon256.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "build/icon512.png"
    },
    "portable": {
      "artifactName": "ForgeTools-Portable-${version}.exe",
      "requestExecutionLevel": "user"
    }
  }
}
